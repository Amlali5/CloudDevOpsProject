pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "aml51/web-app"
        DOCKER_CREDENTIALS = "docker-hub-credentials"
        KUBECONFIG_CREDENTIALS = "kubeconfig-file"
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "üì• Fetching code from GitHub..."
                    checkout scm
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo "üî® Building the app..."
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo "üß™ Running unit tests..."
                    sh 'mvn test'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Building Docker Image..."
                    sh "docker build -t $DOCKER_IMAGE:${env.BUILD_NUMBER} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    echo "üöÄ Pushing Docker Image to Docker Hub..."
                    withDockerRegistry([credentialsId: DOCKER_CREDENTIALS, url: 'https://index.docker.io/v1/']) {
                        sh "docker push $DOCKER_IMAGE:${env.BUILD_NUMBER}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "üì¶ Deploying to Kubernetes..."
                    withCredentials([file(credentialsId: KUBECONFIG_CREDENTIALS, variable: 'KUBECONFIG')]) {
                        sh "kubectl set image deployment/web-app web-app=$DOCKER_IMAGE:${env.BUILD_NUMBER} --kubeconfig=$KUBECONFIG"
                    }
                }
            }
        }
    }
}
